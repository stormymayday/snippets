generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  snippets      Snippet[]  // Relation: A user can have multiple snippets
 
  // @@map("users")
}

model Account {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  userId             String  @map("user_id") @db.ObjectId
  type               String
  provider           String
  providerAccountId  String 
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
  // @@map("accounts")
}

model Snippet {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String   
  code    String
  userId  String   @db.ObjectId // foreign key reference

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade) // Relation to User
}


